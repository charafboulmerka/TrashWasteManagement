<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/layout_edit_dream_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_pink"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ripple_trash"
        android:layout_gravity="left|center"/>

    <EditText
        android:id="@+id/layout_edit_dream_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_margin="10dp"
        android:hint=""
        android:padding="10dp"
        android:background="@drawable/design_edt"/>

    <EditText
        android:id="@+id/layout_edit_dream_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:layout_margin="10dp"
        android:hint=""
        android:padding="10dp"
        android:background="@drawable/design_edt"/>

    <Button
        android:id="@+id/layout_edit_dream_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إضافة"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_shape_design"
        android:layout_gravity="center"/>

</LinearLayout>