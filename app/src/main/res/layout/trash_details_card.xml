<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/detail_card_icon"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/icon_dream_private"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/detail_card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="21dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:minLines="2"
                        android:text="مدفوع مستعجل تفسر حلم رؤية بقرة خضراء"/>
                    <TextView
                        android:id="@+id/detail_card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="5dp"
                        android:drawableRight="@drawable/ic_date"
                        android:drawablePadding="5dp"
                        android:text="تم النشر بتاريخ: 13-03-2022"
                        android:textSize="@dimen/dimen_12"/>

                    <TextView
                        android:id="@+id/detail_card_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="17dp"
                        android:textColor="#555555"
                        android:textStyle="bold"
                        android:minLines="3"
                        android:text=" انا بنت مطلقة حلمت ان اخوي فرحان جدا و كأنه يسعى... اخوي عمره 19 و طالب بالكلية التقنية حالته الأجتماعية اخوي عمره 19 و طالب بالكلية التقنية حالته الأجتماعية اخوي عمره 19 و طالب بالكلية التقنية حالته الأجتماعية اخوي عمره 19 و طالب بالكلية التقنية حالته الأجتماعية اخوي عمره 19 و طالب بالكلية التقنية حالته الأجتماعية اخوي عمره 19 و طالب بالكلية التقنية حالته الأجتماعية"/>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/detail_card_private_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/pickedColorTwo"
                        app:cardCornerRadius="10dp"
                        android:visibility="gone"
                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="البيانات الشخصية مخفية يتم مشاهدتها فقط بواسطة صاحب الحلم و المفسرين"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_margin="10dp"
                            android:drawableTint="@color/white"
                            android:drawableTop="@drawable/ic_not_show"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/detail_card_public_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:minWidth="10dp"
                        android:visibility="visible"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="البيانات الشخصية"
                                android:textStyle="bold"
                                android:textColor="@color/pickedColorOne"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/details_country"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/dimen_4"
                                android:text="الدولة : الجزائر"/>

                            <TextView
                                android:id="@+id/details_situation_family"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/dimen_4"
                                android:text="الحالة الإجتماعية : مطلق / مطلقة"/>

                            <TextView
                                android:id="@+id/details_age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/dimen_4"
                                android:text="الحالة الإجتماعية : مطلق / مطلقة"/>
                            <TextView
                                android:id="@+id/details_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/dimen_4"
                                android:text="الحالة الإجتماعية : مطلق / مطلقة"/>
                            <TextView
                                android:id="@+id/details_job"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/dimen_4"
                                android:text="الحالة الإجتماعية : مطلق / مطلقة"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp">

                    </View>
                </LinearLayout>


            </LinearLayout>
            <ImageView
                android:id="@+id/detail_star"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@drawable/ic_star"
                android:layout_margin="5dp"
                android:layout_gravity="left"/>

            <ImageButton
                android:id="@+id/detail_edit"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@drawable/ic_edit"
                android:background="@drawable/ripple_trash"
                android:layout_marginLeft="44dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="left|bottom"/>

            <ImageButton
                android:id="@+id/detail_delete"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@drawable/ic_trash"
                android:background="@drawable/ripple_trash"
                android:layout_margin="5dp"
                android:layout_gravity="left|bottom"/>



        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>